<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">

  <modelVersion>4.0.0</modelVersion>

  <name>spatial geojson project</name>
  <description>anwiba spatial geojson io project</description>
  <url>${scm.url.net.anwiba.master}/spatial/core/data/Gis_Geo_Json</url>

  <artifactId>anwiba-spatial-data-geo-json</artifactId>
  <parent>
    <groupId>net.anwiba.spatial</groupId>
    <artifactId>anwiba-spatial-maven-core-data</artifactId>
    <version>1.0.76</version>
  </parent>

  <scm>
    <connection>${scm.url.net.anwiba.base}/libraries.git</connection>
    <developerConnection>${scm.url.net.anwiba.base}/libraries.git</developerConnection>
    <url>${scm.url.net.anwiba.master}/spatial/core/data/Gis_Geo_Json</url>
  </scm>

  <build>
    <plugins>

      <plugin>
        <artifactId>maven-clean-plugin</artifactId>
        <executions>
          <execution>
            <id>clean-generated</id>
            <phase>clean</phase>
            <goals>
              <goal>clean</goal>
            </goals>
            <configuration>
              <filesets>
                <fileset>
                  <directory>${basedir}/target/generated/java</directory>
                </fileset>
              </filesets>
            </configuration>
          </execution>
        </executions>
      </plugin>

      <plugin>
        <groupId>org.codehaus.mojo</groupId>
        <artifactId>build-helper-maven-plugin</artifactId>
        <executions>
          <execution>
            <id>add-source-generated</id>
            <phase>generate-sources</phase>
            <goals>
              <goal>add-source</goal>
            </goals>
            <configuration>
              <sources>
                <source>${basedir}/src/main/schema</source>
                <source>${basedir}/target/generated/java</source>
              </sources>
            </configuration>
          </execution>
        </executions>
      </plugin>

      <plugin>
        <groupId>net.anwiba.commons.tools</groupId>
        <artifactId>anwiba-tools-definition-schema-json</artifactId>
        <version>${net.anwiba.plugins.version}</version>
        <executions>
          <execution>
            <id>geojson</id>
            <phase>generate-sources</phase>
            <goals>
              <goal>generate</goal>
            </goals>
            <configuration>
              <pakkage>net.anwiba.spatial.geo.json.v01_0</pakkage>
              <comment>Copyright (c) 2012 by Andreas W. Bartels (bartels@anwiba.de)</comment>
            </configuration>
          </execution>
          <execution>
            <id>schema</id>
            <phase>generate-sources</phase>
            <goals>
              <goal>generate</goal>
            </goals>
            <configuration>
              <pakkage>net.anwiba.spatial.geo.json.schema.v01_0</pakkage>
              <comment>Copyright (c) 2012 by Andreas W. Bartels (bartels@anwiba.de)</comment>
            </configuration>
          </execution>
        </executions>
      </plugin>

      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-site-plugin</artifactId>
        <executions>
          <execution>
            <id>attach-descriptor</id>
            <goals>
              <goal>attach-descriptor</goal>
            </goals>
          </execution>
        </executions>
        <configuration>
          <reportPlugins>
            <plugin>
              <groupId>org.codehaus.mojo</groupId>
              <artifactId>findbugs-maven-plugin</artifactId>
              <configuration>
                <excludeFilterFile>findbugs-exclude.xml</excludeFilterFile>
              </configuration>
            </plugin>
          </reportPlugins>
        </configuration>
      </plugin>
    </plugins>
  </build>

  <dependencies>

    <dependency>
      <groupId>net.anwiba.commons</groupId>
      <artifactId>anwiba-commons-json</artifactId>
    </dependency>

    <dependency>
      <groupId>net.anwiba.commons</groupId>
      <artifactId>anwiba-commons-resource</artifactId>
      <scope>test</scope>
    </dependency>

    <dependency>
      <groupId>net.anwiba.commons</groupId>
      <artifactId>anwiba-commons-utilities</artifactId>
      <scope>test</scope>
    </dependency>

  </dependencies>

</project>
