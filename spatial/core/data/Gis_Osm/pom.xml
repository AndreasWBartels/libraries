<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
  <modelVersion>4.0.0</modelVersion>

  <name>spatial osm project</name>
  <description>anwiba spatial open street map json io project</description>
  <url>${scm.url.net.anwiba.master}/spatial/core/data/Gis_Osm</url>

  <artifactId>anwiba-spatial-data-osm</artifactId>
  <parent>
    <groupId>net.anwiba.spatial</groupId>
    <artifactId>anwiba-spatial-maven-core-data</artifactId>
    <version>1.0.126</version>
  </parent>

  <scm>
    <connection>${scm.url.net.anwiba.base}/libraries.git</connection>
    <developerConnection>${scm.url.net.anwiba.base}/libraries.git</developerConnection>
    <url>${scm.url.net.anwiba.master}/spatial/core/data/Gis_Osm</url>
  </scm>

  <dependencies>

    <dependency>
      <artifactId>anwiba-spatial-data-geo-json</artifactId>
      <groupId>net.anwiba.spatial</groupId>
      <version>${net.anwiba.spatial.version}</version>
    </dependency>

  </dependencies>

  <build>
    <plugins>
      <plugin>
        <artifactId>maven-clean-plugin</artifactId>
        <executions>
          <execution>
            <id>clean-generated</id>
            <phase>clean</phase>
            <goals>
              <goal>clean</goal>
            </goals>
            <configuration>
              <filesets>
                <fileset>
                  <directory>${basedir}/target/generated/java</directory>
                </fileset>
              </filesets>
            </configuration>
          </execution>
        </executions>
      </plugin>

      <plugin>
        <groupId>org.codehaus.mojo</groupId>
        <artifactId>build-helper-maven-plugin</artifactId>
        <executions>
          <execution>
            <id>add-source-generated</id>
            <phase>generate-sources</phase>
            <goals>
              <goal>add-source</goal>
            </goals>
            <configuration>
              <sources>
                <source>${basedir}/src/main/schema</source>
                <source>${basedir}/target/generated/java</source>
              </sources>
            </configuration>
          </execution>
        </executions>
      </plugin>

      <plugin>
        <groupId>net.anwiba.commons.tools</groupId>
        <artifactId>anwiba-tools-definition-schema-json</artifactId>
        <version>${net.anwiba.plugins.version}</version>
        <executions>
          <execution>
            <id>nominatim</id>
            <phase>generate-sources</phase>
            <goals>
              <goal>generate</goal>
            </goals>
            <configuration>
              <pakkage>net.anwiba.spatial.osm.nominatim.schema.v01_0</pakkage>
              <comment>Copyright (c) 2017 by Andreas W. Bartels</comment>
            </configuration>
          </execution>
          <execution>
            <id>overpass</id>
            <phase>generate-sources</phase>
            <goals>
              <goal>generate</goal>
            </goals>
            <configuration>
              <pakkage>net.anwiba.spatial.osm.overpass.schema.v00_6</pakkage>
              <comment>Copyright (c) 2017 by Andreas W. Bartels</comment>
            </configuration>
          </execution>
        </executions>
      </plugin>
    </plugins>
  </build>

</project>
